<div class="row">
  <div class="col s8">
    <span class="switch-label materialize-selectable-item-label action-switch-label tooltipped" data-tooltip="{{content.tooltip}}" data-position="right">{{name}}</span>
  </div>

  <div class="col s4">
    <label class="{{_labelClass}}">
      {{input type="checkbox" disabled=disabled checked=isSelected}}
      <span class="lever"></span>
    </label>
  </div>
</div>