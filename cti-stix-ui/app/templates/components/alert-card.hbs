{{#if alert.error}}
  <div class="card">
    <div class="card-content">
      <div class="card-title red-text text-darken-4">
        {{alert.label}}
      </div>
      <div class="row">
        <div class="col s12">
          <div class="red-text text-darken-4">
            {{alert.error.message}}
          </div>
        </div>
      </div>
      {{#if alert.error.errors}}
        <div class="row">
          <div class="col s12 red-text text-darken-4">
            {{#each alert.error.errors as |error|}}
              <div>{{error.title}}</div>
            {{/each}}
          </div>
        </div>
      {{/if}}
    </div>
  </div>
{{/if}}