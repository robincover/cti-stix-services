<div class="container">
{{help-card help=model.help}}
  <h4>
    <i class="material-icons">share</i>
    Relationships
  </h4>

  <div class="row">
    <div class="col s9 left-align">
      {{#link-to "relationship-new" class="waves-effect waves-light btn"}}
        New
      {{/link-to}}

      {{#link-to "relationship-grid" class="waves-effect waves-light btn"}}
        Mitigates Grid
      {{/link-to}}
      
      <a class="waves-effect waves-light btn" a href="/unfetter-discover-api/bundles/relationships" download ="relationships.json">
        Download
      </a>
    </div>

    <div class="col s3 right-align">
      <span class="right-align">Results: {{model.items.length}}</span>
    </div>
  </div>

  {{#md-collection content=model.items as |item|}}
    <div class="collection-item">
      <div class="row">
        <div class="col s2">
          <strong>{{identifier-type item.source_ref}}</strong>
        </div>
        <div class="col s2">
          {{identifier-summarized item.source_ref}}
        </div>
        <div class="col s2">
          {{#link-to "relationship" item.id}}
          {{item.relationship_type}}
          {{/link-to}}
        </div>
        <div class="col s2 right-align">
          <strong>{{identifier-type item.target_ref}}</strong>
        </div>
        <div class="col s2 right-align">
          {{identifier-summarized item.target_ref}}
        </div>
        <div class="secondary-content col s2 right-align">    
        {{#link-to (query-params deleteObjectId=item.id) class="btn waves-effect waves-light red"}}
          <i class="material-icons">delete</i>
        {{/link-to}}
      </div>
      </div>
    </div>
  {{/md-collection}}
</div>