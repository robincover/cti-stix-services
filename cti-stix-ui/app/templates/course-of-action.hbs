<div class="container">
{{help-card help=model.help}}
<h4>
  <i class="material-icons">assignment</i>
  {{model.item.name}}
</h4>

{{#md-card id=model.item.id}}
    {{#md-card-content}}

    <div class="row">
      <div class="col">
        <p>Labels</p>
        <p>
        {{#if model.item.labels}}
            {{#each model.item.labels as |label|}}
              <div class="chip">{{label}}</div>
            {{/each}}
        {{/if}}
        </p>
      </div>
    </div>
  <div class="row">
      <div class="col">
        <p>Rating Labels</p>
        <p>
        {{#if model.item.x_unfetter_rating_labels}}
            {{#each model.item.x_unfetter_rating_labels as |x_unfetter_rating_label|}}
              <div class="chip">{{x_unfetter_rating_label}}</div>
            {{/each}}
        {{/if}}
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <p>External References</p>
        <p>
        {{#if model.item.external_references}}
            {{#each model.item.external_references as |external_reference|}}
              <div class="chip">{{external_reference.source_name}}</div>
              {{#if external_reference.url}}
                <a target="_blank" href="{{external_reference.url}}">{{external_reference.external_id}}</a>
              {{else}}
                {{external_reference.external_id}}
              {{/if}}
            {{/each}}
        {{/if}}
        </p>
      </div>
    </div>
